package UI;

import java.awt.*;
import java.awt.event.*;

public class Display extends Frame{
	
	
	public Display(int x, int y){
		super();
		createUI(x,y);
	}
	
	public void createUI(int x, int y){
		setSize(x,y);
		center();
		
		addWindowListener(new WindowAdapter() {
			public void windowClosing(WindowEvent e) {
				dispose();
			}
		});
	}
}
